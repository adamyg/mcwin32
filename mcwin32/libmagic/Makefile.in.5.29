# libmagic makefile
#
#
#

@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
E=
O=		.o
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
AR=		@AR@
RANLIB=		@RANLIB@
RM=		@RM@
PERL=		@PERL@
LIBTOOL=	@LIBTOOL@

# Configuration

ifeq ("$(BUILD_TYPE)","")	#default
BUILD_TYPE=	debug
MAKEFLAGS+=	BUILD_TYPE=debug
endif
ifneq ("$(BUILD_TYPE)","release")
RTSUFFIX=d
endif

# Directories

D_INC=		$(ROOT)/include
D_BIN=		$(ROOT)/bin@TOOLCHAINEXT@/$(BUILD_TYPE)
D_LIB=		$(ROOT)/lib@TOOLCHAINEXT@/$(BUILD_TYPE)
D_OBJ=		$(ROOT)/objects@TOOLCHAINEXT@/$(BUILD_TYPE)/libmagic

# Common flags

XFLAGS=		

CFLAGS=		@CFLAGS@
CWARN=		@CWARN@
CDEBUG=		@CDEBUG@
CRELEASE=	@CRELEASE@
LDDEBUG=	@LDDEBUG@
LDRELEASE=	@LDRELEASE@

CINCLUDE=	-I. -I$(D_INC) @CINCLUDE@
CEXTRA=		@DEFS@ -DWIN32=1
ifeq ("$(BUILD_TYPE)","release")
CFLAGS+=	$(CRELEASE) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
LDFLAGS=	$(LDRELEASE) @LDFLAGS@
else
CFLAGS+=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
LDFLAGS=	$(LDDEBUG) @LDFLAGS@
endif
LDLIBS=		-L$(D_LIB) $(D_LIB)/$(LP)regex$(A) @LIBS@ @LIBM@ @EXTRALIBS@

ARFLAGS=	rcv
RMFLAGS=	-f


############################################################

# targets

MAGICLIB=	$(D_LIB)/$(LP)magic_static$(A)
MAGICDLL=	$(D_LIB)/$(LP)magic.la

MAGICUTIL=	$(D_BIN)/file$(E)
MAGICDB=	$(D_BIN)/magic.mgc

#VERSION=	5.1.1
#MAGICPACKED=	file-511.tgz
#MAGICSRC=	./file-511
#MAGDIR=	./file-511/src/magic
VERSION=	5.29
MAGICPACKED=	file-5.29.gr.tgz
MAGICSRC=	./file-5.29/src
MAGDIR=		./file-5.29/magic

VERSIONSPEC=	$(subst .,:,$(VERSION))

VPATH=		$(MAGICSRC)
CSOURCES=\
	apprentice.c \
	ascmagic.c \
	cdf.c \
	cdf_time.c \
	compress.c \
	encoding.c \
	fsmagic.c \
	funcs.c \
	is_tar.c \
	magic.c \
	print.c \
	readcdf.c \
	softmagic.c \
	getline.c \
	asprintf.c \
	vasprintf.c \
	strlcpy.c \
	strlcat.c
ifneq ($(VERSION),5.11)
CSOURCES+=\
	fmtcheck.c \
	der.c \
	pread.c \
	strcasestr.c \
	ctime_r.c \
	asctime_r.c \
	localtime_r.c \
	gmtime_r.c
endif

LIBOBJS=\
	$(addprefix $(D_OBJ)/,$(subst .c,$(O),$(CSOURCES)))

DLLOBJS=\
	$(subst $(O),.lo,$(LIBOBJS))

UTILOBJS=\
	$(D_OBJ)/file$(O)		\
	$(D_OBJ)/getopt_long$(O)	\
	$(D_OBJ)/getline$(O)

XCLEAN+=	$(MAGICDB) magic.mgc
OBJS=		$(LIBOBJS) $(DLLOBJS) $(UTILOBJS)
LIBS=		$(MAGICLIB) $(MAGICDLL)
TSKS=		$(MAGICUTIL)

# Rules

.PHONY: 	build release debug
build:			source unpacked
unpacked:		$(LIBS) $(TSKS) $(MAGICDB) installinc

release:
		$(MAKE) BUILD_TYPE=release $(filter-out release, $(MAKECMDGOALS))
debug:
		$(MAKE) BUILD_TYPE=debug $(filter-out debug, $(MAKECMDGOALS))

$(MAGICLIB):		CEXTRA += -D__LIBMAGIC_BUILD -DLIBMAGIC_STATIC
$(MAGICLIB):		$(D_OBJ)/.created $(LIBOBJS)
		$(RM) $(RMFLAGS) $@ >/dev/null 2>&1
		$(AR) $(ARFLAGS) $@ $(LIBOBJS)
		$(RANLIB) $@

$(MAGICDLL):		CEXTRA += -D__LIBMAGIC_BUILD -DLIBMAGIC_DYNAMIC
$(MAGICDLL):		$(DLLOBJS)
		$(LIBTOOL) --mode=link $(CC) -o $@ $^ -version-number $(VERSIONSPEC) \
			-rpath $(D_LIB) -bindir $(D_BIN) $(LDFLAGS) $(LDLIBS)

$(MAGICUTIL):		$(UTILOBJS)
		$(CC) $(LDFLAGS) $^ -o $@ $(D_LIB)/libmagic$(A) $(LDLIBS)

$(MAGICDB):		magic.mgc
		@echo publishing magicdb $(MAGICDB) ...
		@cp -f magic.mgc $(MAGICDB)

magic.mgc:		MSRC=$(wildcard $(MAGDIR)/Magdir/*)
magic.mgc:		$(MSRC) Makefile
		@$(RM) -fr magic
		-@mkdir magic
		@cp -f $(MSRC) magic
		$(MAGICUTIL) -C -m magic
		@$(RM) -fr magic

source:			.unpacked.$(VERSION)
		$(MAKE) unpacked

.unpacked.$(VERSION):	$(MAGICPACKED)
		@echo "do not delete, managed file" > $@
		@echo "unpacking source $(MAGICPACKED)"
		@gzip -c -d $(MAGICPACKED) | tar -xvf -

installinc:		../include/.created
		@echo publishing headers 'magic.h' ...
		@cp -f $(MAGICSRC)/magic.h ../include

%/.created:
		-@mkdir $(@D)
		@echo "do not delete, managed directory" > $@

clean:
		@echo $(BUILD_TYPE) clean
		-@$(LIBTOOL) --mode=clean $(RM) $(MAGICDLL) $(DLLOBJS) >nul 2>&1
		-@$(RM) $(RMFLAGS) $(BAK) $(TSKS) $(LIBS) $(CLEAN) $(XCLEAN) >nul 2>&1
		-@$(RM) $(LIBOBJS) $(UTILOBJS) >nul 2>&1

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -D_CRT_SECURE_NO_DEPRECATE -o $@ -c $<

$(D_OBJ)/%.lo:		%.c
		$(LIBTOOL) --mode=compile $(CC) $(CFLAGS) -D_CRT_SECURE_NO_DEPRECATE -o $@ -c $<

#end
